generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String

  Services Service[]
}

model Service {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  name         String
  description  String?
  port         Int
  gitHubUrl    String
  mainBranch   String
  buildCommand String
  startCommand String
  projectId    Int

  EnvVars EnvVar[]
  Project Project? @relation(fields: [projectId], references: [id])
}

model EnvVar {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  key       String
  value     String
  serviceId Int

  Service Service @relation(fields: [serviceId], references: [id])
}
